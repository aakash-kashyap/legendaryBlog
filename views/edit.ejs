<% include ./partials/header %>
    
    <div class="ui main container segment">
        <h1 class="ui header">Edit <%=blog.title %></h1>    
        <form class="ui form " action="/blogs/<%= blog._id%>?_method=PUT" method="POST">
            <div class="field"><label>Title</label> <input type="text" name ="blog[title]" value="<%=blog.title %>"></div>
            <div class="field"><label>Image Url</label> <input type="text" name ="blog[image]" value="<%=blog.image %>" required> </div>
            <div class="field"><label>Content</label> <textarea name ="blog[body]"  required> <%=blog.body %> </textarea></div>
            <div class="field"> <button class = "ui basic big button">Submit</button> </div>
        </form>
    </div>
    
<% include ./partials/footer %>